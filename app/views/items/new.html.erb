<div class="container">
  <div class="row">
    <div class="col-3 item-info-and-booking">
      <div class="item-info">
        <%= simple_form_for(@item) do |f| %>
          <div class="form-inputs">
            <%= f.input :brand, value: @item.brand || '' %>
            <%= f.input :model, value: @item.model || '' %>
            <%= f.input :product_description, value: @item.product_description || '' %>
            <%= f.input :item_category, value: @item.item_category || 'Camera' %>
            <%= f.input :user_description, value: @item.user_description || '' %>
            <%= f.input :condition, value: @item.condition || 'Sufficient' %>
            <%= f.input :price_per_day, value: @item.price_per_day || 0%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-9 item-pictures-carousel">

    </div>
  </div>
</div>
